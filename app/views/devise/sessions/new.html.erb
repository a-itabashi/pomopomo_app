<% provide(:title, "ログイン") %>
<h1 class="text-center">ログイン</h1>

<div class="row justify-content-center form_font">
  <div class="col-md-offset-3 col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">

      <div class="text-center">
        <%= devise_error_messages %>
      </div>

      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
    </div>
    &nbsp
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control"  %>
    </div>
    &nbsp
    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
    &nbsp
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-dark btn-lg"  %>
    </div>
    <% end %>
  </div>
</div>
&nbsp
<div class="text-center">
  <%= link_to 'Twitterアカウントでログイン', user_twitter_omniauth_authorize_path, class: "fab fa-twitter btn btn-primary btn-lg" %>
</div>
&nbsp
<div class="text-center">
  <%= link_to 'Googleアカウントでログイン', user_google_omniauth_authorize_path, class: "fab fa-google btn btn-danger btn-lg" %>
</div>
&nbsp
<div class="text-center">
  <%= link_to "新規登録はこちら", new_user_registration_path, class: "btn btn-secondary btn-lg" %>
</div>

<% if false %>
  <%= render "devise/shared/links" %>
<% end %>