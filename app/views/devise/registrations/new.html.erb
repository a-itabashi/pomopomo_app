<h1 class="text-center">新規登録</h1>

<div class="row justify-content-center form_font">
  <div class="col-md-offset-3 col-md-6 col-md-offset-3">
    <% resource = User.new unless resource %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前 or ニックネーム" %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    &nbsp
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    &nbsp
    <div class="field">
      <%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上でお願いします)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
    &nbsp
    <div class="field">
      <%= f.label :password_confirmation, "パスワードの確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    &nbsp
    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-dark btn-lg" %>
    </div>
    <% end %>
  </div>
</div>
&nbsp
<div class="text-center">
  <%= link_to 'Twitterアカウントでログイン', user_twitter_omniauth_authorize_path, class: "fab fa-twitter btn btn-primary btn-lg" %>
</div>
&nbsp
<div class="text-center">
  <%= link_to 'Googleアカウントでログイン', user_google_omniauth_authorize_path, class: "fab fa-google btn btn-danger btn-lg" %>
</div>

<% if false %>
  <%= render "devise/shared/links" %>
<% end %>
