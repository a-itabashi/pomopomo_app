<h1 class="text-center">プロフィールの編集</h1>

<div class="row justify-content-center form_font">
  <div class="col-md-offset-3 col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前 or ニックネーム" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
    &nbsp
    <!-- Oauth認証の場合は表示しない -->
    <% unless @user.provider.present? %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    <% end %>
    &nbsp
    <div class="field">
      <%= f.label :image_url, "プロフィール画像" %><br />
       <p><%= image_tag(@user.image_url) if @user.image_url %></p>
      
    
    </div>




    <div class="field">
      <%= f.label :description, "自己紹介文" %><br />
      <%= f.text_area :description, autofocus: true, class: "form-control" %>
    </div>

    
    &nbsp
    <div class="actions">
      <%= f.submit "編集する", class: "btn btn-dark btn-lg" %>
    </div>
    <% end %>
  </div>
</div>
&nbsp
<div class="text-center">
<%= link_to "戻る", :back %>
</div>
