<% unless post.user_id == current_user.id %>
  <% post_favorite = current_user.post_favorites.find_by(post_id: post.id) %>
  <% if post_favorite.present? %>

    <%= link_to post_favorite_path(id: post_favorite.id, post_id: post.id), method: :delete, remote: true do %>
      <div class = "iine__button">❤︎<%= post.post_favorites.count %></div>
    <% end %>
    <% else %>
      <%= link_to post_favorites_path(post_id: post.id), method: :post, remote: true do %>
      <div class = "iine__button">♡️<%= post.post_favorites.count %></div>
    <% end %>
  <% end %>
<% end %>